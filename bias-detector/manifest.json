{
  "manifest_version": 3,
  "name": "Credibility Analyzer",
  "version": "1.0.0",
  "description": "Analyze webpage credibility using AI-powered analysis with corroborating sources",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}